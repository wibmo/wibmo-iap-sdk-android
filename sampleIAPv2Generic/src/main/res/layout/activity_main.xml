<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Sample Merchant App" />

        <TextView
            android:id="@+id/title_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="IAP V2 Generic" />

        <TextView
            android:id="@+id/title_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="INR 10.00" />



        <TextView
            android:id="@+id/title_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:gravity="left"
            android:text="Pay with :" />

        <ImageButton
            android:id="@+id/pww_button"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:src="@drawable/paywith_wibmo"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="centerInside"/>


        <TextView
            android:id="@+id/title_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="--- Output ---" />

        <TextView
            android:id="@+id/output_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:text="" />


        <Button
            android:id="@+id/button_check_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Status \n(S2S Call from Merchant Server)"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/output_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:text="" />

        <Button
            android:id="@+id/button_charge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charge Card \n(S2S Call from Merchant Server)"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/output_charge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:text="" />
    </LinearLayout>
</ScrollView>